generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

enum OutboxEventStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum NotificationType {
  TASK_CREATED
  TASK_UPDATED
  TASK_ASSIGNMENT
  TASK_COMMENT
  TASK_DEADLINE_APPROACHING
  SYSTEM
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model RefreshTokenBlacklist {
  tokenHash String   @id
  expiresAt DateTime

  @@index([expiresAt])
  @@map("refresh_tokens_blacklist")
}

model Task {
  id          String       @id @default(uuid())
  author      String
  title       String
  description String?
  deadline    DateTime?
  priority    TaskPriority
  status      TaskStatus
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?

  comments    TaskComment[]
  auditLogs   TaskAuditLog[]
  assignments TaskAssignment[]

  @@index([author])
  @@index([deadline])
  @@index([priority])
  @@index([status])
  @@index([createdAt])
  @@map("tasks")
}

model TaskComment {
  id         String   @id @default(uuid())
  taskId     String
  author     String
  authorName String
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([author])
  @@map("task_comments")
}

model TaskAuditLog {
  id        String   @id @default(uuid())
  taskId    String
  author    String
  action    String
  field     String?
  oldValue  Json?
  newValue  Json?
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([author])
  @@index([taskId, createdAt])
  @@map("task_audit_log")
}

model TaskAssignment {
  id        String   @id @default(uuid())
  taskId    String
  author    String
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, author])
  @@map("task_assignments")
}

model OutboxEvent {
  id           String            @id @default(uuid())
  aggregateId  String
  type         String
  data         Json
  status       OutboxEventStatus @default(PENDING)
  retryCount   Int               @default(0)
  errorMessage String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  publishedAt  DateTime?

  @@index([aggregateId])
  @@index([status])
  @@index([status, createdAt])
  @@map("outbox_events")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  title     String
  message   String
  type      NotificationType
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  readAt    DateTime?

  @@index([userId, createdAt, readAt])
  @@map("notifications")
}
